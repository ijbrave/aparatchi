generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  @@map("movie")
  id String @id @default(uuid())
  imdbId String @unique
  title String
  summary String @db.VarChar(500)
  year Int
  time Int
  rating Float
}

model User {
  @@map("user")
  id String @id @default(uuid())
  name String
  email String @unique
  password String
}
