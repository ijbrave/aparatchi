{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"rootDir": "./",
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["*"],
			"~/config/*": ["config/*"],
			"~/controllers/*": ["controllers/*"],
			"~/middleware/*": ["middleware/*"],
			"~/routes/*": ["routes/*"]
		}
	}
}
